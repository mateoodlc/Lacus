<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="340dp"
    android:background="#00ff0000"
    android:layout_gravity="center"
    android:elevation="3dp"
    android:layout_height="360dp">

    <TextView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:textColor="#fff"
        android:text="X"
        android:elevation="2dp"
        android:layout_marginRight="35dp"
        android:layout_marginTop="65dp"
        android:textStyle="bold"
        android:id="@+id/cerrarTxt"
        android:layout_alignParentEnd="true"
        android:layout_gravity="end"
        android:gravity="center"
        android:background="@drawable/popup_shape"/>

    <LinearLayout
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        android:elevation="0.5dp"
        android:id="@+id/iconocategoria"
        android:background="@drawable/iconotarjetabackground"
        android:gravity="center">

        <ImageView
            android:id="@+id/imagen_popup"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_centerHorizontal="true"

            android:layout_gravity="center"
            android:background="@drawable/ic_infraestructura" />

    </LinearLayout>


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="250dp"
        android:background="@drawable/popup_shape"
        android:layout_weight="1"
        android:layout_marginTop="230dp"
        android:gravity="center"
        android:layout_below="@id/imagebackground"
        android:elevation="0.5dp"
        android:layout_centerHorizontal="true"
        android:layout_height="100dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:id="@+id/numerodenuncias"
            android:text="23"
            android:textColor="#fff"
            />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Denuncias"
            android:textColor="#fff"
            android:textSize="18sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="300dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:background="#00ffffff">





        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:orientation="vertical"
            android:padding="1dp"
            android:layout_marginTop="40dp"
            android:id="@+id/descripcionMarcador"
            android:layout_gravity="center"
            android:background="@drawable/popup_background"
            >



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="#c555"
                android:layout_marginTop="95dp"
                android:layout_below="@id/iconocategoria"
                android:text="Infraestructura"
                android:id="@+id/categoria"
                android:textSize="20sp"
                android:layout_gravity="center_horizontal"
                android:textAlignment="center"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="normal"
                android:textColor="#c555"
                android:textSize="15sp"
                android:id="@+id/problematica"
                android:layout_below="@id/categoria"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:text="Calle en mal estado"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/descripcionMarcador"
            android:orientation="horizontal">



        </LinearLayout>

    </LinearLayout>

</RelativeLayout>