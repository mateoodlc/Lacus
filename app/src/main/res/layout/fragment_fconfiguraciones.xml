<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.mac.lacus.FConfiguraciones">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:paddingRight="70dp"
        android:paddingLeft="70dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:id="@+id/relativeLayout">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true">



            <!--  -->

            <com.yinglan.shadowimageview.ShadowImageView
                android:id="@+id/perfilImg"
                android:layout_width="130dp"
                android:layout_height="130dp"
                app:shadowSrc="@drawable/ic_culture"
                app:shadowRound="20dp"
                app:shadowColor="@color/colorAccent"
                android:layout_marginTop="53dp"
                android:layout_below="@+id/titulo"
                android:layout_centerHorizontal="true"
/>


            <TextView
                android:id="@+id/nombre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/perfilImg"
                android:layout_marginTop="18dp"
                android:text="Juan Felipe Orobio"
                android:textAlignment="center"
                android:textStyle="bold" />

            <Button
                android:id="@+id/perfil"
                style="?android:attr/listSeparatorTextViewStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/nombre"
                android:layout_marginTop="23dp"
                android:text="Perfil"
                android:textAllCaps="false"
                android:textColor="#8BC34A"
                android:textStyle="normal" />


            <Button
                android:id="@+id/boton"
                style="?android:attr/listSeparatorTextViewStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/perfil"
                android:text="Boton"
                android:textAllCaps="false"
                android:textColor="#8BC34A"
                android:textStyle="normal" />

            <Button
                android:id="@+id/notificaciones"
                style="?android:attr/listSeparatorTextViewStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/boton"
                android:text="Notificaciones"
                android:textAllCaps="false"
                android:textColor="#8BC34A"
                android:textStyle="normal" />

            <Button
                android:id="@+id/cerrarsesion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="23dp"
                android:onClick="onClick"
                android:text="Cerrar sesiÃ³n"
                android:textAllCaps="false"
                android:textStyle="normal"
                android:textColor="#fff"
                android:background="@drawable/popup_shape"
                android:layout_below="@+id/notificaciones"
                android:layout_alignParentStart="true" />

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>
